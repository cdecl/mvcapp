@{
    ViewData["Title"] = "Mvcapp";
    ViewData["Version"] = "0.5 / net5.0";

    var userAgent = ViewData["UserAgent"].ToString();
    var cli = userAgent.Contains("curl");
    if (cli) {
        Layout = null;
    }

    string Format(string name, object val) {
        string ret = string.Format("* {0,-17} : {1}", name, val);

        return ret;
    }
}

@if (!cli) 
{ 
   @:<pre style="white-space: pre-wrap">
}
    @Format("Project", ViewData["Title"])
    @Format("Version", @ViewData["Version"])
    @Format("Hostname", ViewData["Hostname"])
    @Format("Sleep", ViewData["Sleep"])
    @Format("RemoteAddr", ViewData["RemoteAddr"])
    @Format("X-Forwarded-For", ViewData["XForwardedFor"])
    @Format("Request Count", ViewData["CallCount"])
    @Format("User-Agent", ViewData["UserAgent"])
@if (!cli) 
{ 
    @:</pre> 
}
